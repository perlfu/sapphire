/*
 * MMTk script that mimics the behaviour of the FixedLive benchmark
 */
type tree {
  int i1;
  int i2;
  tree left;
  tree right;
}

void main() {
  tree t = createTree(15);
  allocLoop(100000);
}

tree createTree(int depth) {
  tree t = alloc(tree);
  if (depth > 1) {
    t.left = createTree(depth-1);
    t.right = createTree(depth-1);
  }
  return t;
}

void allocLoop(int count) {
  while (count > 0) {
    tree t = alloc(tree);
    count = count-1;
  }
}