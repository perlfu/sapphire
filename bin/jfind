# Search rvm source files for specified word.
# If no word is specified, list names of all rvm source files.

cd $RVM_ROOT/$dir
if [ $# = 0 ]; then
    find . -name .svn -prune -o -type f -not -name '*~' -print
else
    find . -name .svn -prune -o -type f -not -name '*~' -print | xargs fgrep -n -- "$*"
fi
