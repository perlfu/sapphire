<project name="spoon" default="build" basedir=".">

  <import file="base.xml"/>

  <property name="spoon.version" value="1.3"/>
  <property name="spoon.description" value="Spoon, the Java program processor"/>

  <property name="spoon.dir" location="${components.dir}/spoon/${spoon.version}/spoon-${spoon.version}"/>

  <!-- **************************************************************************** -->
  <!-- *                                                                          * -->
  <!-- *               Downloading and installing Eclipse compiler                * -->
  <!-- *                                                                          * -->
  <!-- **************************************************************************** -->

  <target name="init-spoon-properties" depends="prepare-ant-tasks">
    <condition property="spoon.from-web" value="true">
      <or>
        <not>
          <available file="${spoon.dir}/spoon.jar"/>
        </not>
        <isset property="spoon.force-download"/>
      </or>
    </condition>
  </target>

  <target name="fetch" depends="init-spoon-properties" if="spoon.from-web">
    <mkdir dir="${spoon.dir}"/>
    <get src="http://gforge.inria.fr/frs/download.php/2277/spoon-core-1.3-jar-with-dependencies.jar"
         dest="${spoon.dir}/spoon.jar"/>
    <writeComponentConstants dir="${spoon.dir}"/>
  </target>

  <target name="build" depends="fetch">
    <setComponentsConfig key="spoon.jar" value="${spoon.dir}/spoon.jar"/>
  </target>

  <target name="ensure" depends="prepare-ant-tasks">
    <ensureUptodate name="spoon" dir="${spoon.dir}"/>
  </target>

</project>
