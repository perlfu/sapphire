# Select runtime compiler, either opt or base. Defaults to base.
config.runtime.compiler=
# Select bootimage compiler, either opt or base. Defaults to base.
config.bootimage.compiler=
# Specify class name of garbage collector plan.
config.mmtk.plan=

# Set to true to include adaptive system. Must also have runtime compiler set to opt. Defaults to false.
config.include.aos=

# Set to true to compile the RVM with GCSpy support. Defaults to false.
config.include.gcspy=

# Set to true to include GCSpy client with rvm image. Defaults to false.
config.include.gcspy-client=

# Set to true to use GCSpy stub rather than "real" GCSpy. Defaults to false.
config.include.gcspy-stub=

# Either extreme, normal or none. Defaults to normal.
config.assertions=

# Default Initial heap size in MB. Defaults to 20.
config.default-heapsize.initial=

# Default Maximum heap size in MB. Defaults to 100.
config.default-heapsize.maximum=

# Any extra args to pass to bootimage compiler. Default to "".
config.bootimage.compiler.args=

# Set to number of allocations between gcs to stress test the GC subsystem, 0 to disable. Defaults to 0.
config.stress-gc-interval=
