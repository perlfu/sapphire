#!/bin/sh
#
# (C) Copyright IBM Corp. 2001
#
# $Id$
#
# @author Derek Lieber

# Search rvm source files for specified word.
# If no word is specified, list names of all rvm source files.

cd $RVM_ROOT/rvm

if [ $# = 0 ]; then
   find src/vm -name CVS -prune -o -type f -print
else
   find src/vm -name CVS -prune -o -type f -print | xargs fgrep -n -- "$*"
fi

if [ $# = 0 ]; then
   find src/tools -name CVS -prune -o -type f -print
else
   find src/tools -name CVS -prune -o -type f -print | xargs fgrep -n -- "$*"
fi

if [ $# = 0 ]; then
   find src/include -name CVS -prune -o -type f -print
else
   find src/include -name CVS -prune -o -type f -print | xargs fgrep -n -- "$*"
fi

if [ $# = 0 ]; then
   find bin -name CVS -prune -o -type f -print
else
   find bin -name CVS -prune -o -type f -print | xargs fgrep -n -- "$*"
fi
