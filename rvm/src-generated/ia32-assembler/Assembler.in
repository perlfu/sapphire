    int miStart = mi;
    generateREXprefix(false, dst, null, src);
    setMachineCodes(mi++, (byte) 0x0F);
    emitCondOpByte((byte)0x40, cond);
    emitRegDispRegOperands(src, disp, dst);
    if (lister != null) lister.RRD(miStart, "CMOV" + CONDITION[cond], dst, src, disp);
  }

