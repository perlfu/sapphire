  public final void emitBSWAP_Reg_Quad(GPR reg) {
    int miStart = mi;
    generateREXprefix(true, null, null, reg);
    setMachineCodes(mi++, (byte) 0x0F);
    setMachineCodes(mi++, (byte) (0xC8 | (reg.value() & 7)));
