        setMachineCodes(mi++, (byte) (0xC0 + reg2));
        break;
      case NE:
        setMachineCodes(mi++, (byte) 0xDB);
        setMachineCodes(mi++, (byte) (0xC8 + reg2));
        break;
      case LGT:
