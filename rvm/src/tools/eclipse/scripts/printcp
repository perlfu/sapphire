# Read files from stdin, and combine them into a path
# string that can be used as a classpath.

my $BASEDIR = shift @ARGV;
(defined $BASEDIR) || die;

my $cp;
while (<>) {
    chop;
    s,^\./,,;
    $cp = "$BASEDIR/$_:$cp";
}

chop $cp;
print "$cp\n";
